<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Edit Set - Lego Collection</title>
</head>
<body>

    <!-- Navbar -->
    <%- include('partials/navbar', { page: '' }) %>

    <div class="container mx-auto mt-4">
        <div class="hero bg-gray-200 min-h-screen flex justify-center items-center">
            <div class="text-center">
                <% if(set) { %>
                <h1 class="text-4xl font-bold mt-8">Edit Set - <%= set.name %></h1>
                <% } else { %>
                <h1 class="text-4xl font-bold mt-8">Edit Set</h1>
                <% } %>
                <h1 class="text-3 font mt-4">You can update the set details here...</h1>
                
                <!-- Form for editing an existing set -->
                <form action="/lego/editSet" method="POST" class="max-w-md mx-auto grid grid-cols-1 gap-y-6 md:grid-cols-2 md:gap-x-6 mt-8">
                    <!-- Name -->
                    <div>
                        <input type="text" name="name" id="name" placeholder="Name" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" value="<%= set.name %>" required>
                    </div>
                    
                    <!-- Year -->
                    <div>
                        <input type="number" name="year" id="year" placeholder="Year" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" value="<%= set.year %>" required>
                    </div>
                    
                    <!-- Number of Parts -->
                    <div>
                        <input type="number" name="num_parts" id="num_parts" placeholder="Number of Parts" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" value="<%= set.num_parts %>" required>
                    </div>
                    
                    <!-- Image URL -->
                    <div>
                        <input type="url" name="img_url" id="img_url" placeholder="Image URL" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" value="<%= set.img_url %>" required>
                    </div>
                    
                    <!-- Theme ID -->
                    <div>
                        <select name="theme_id" id="theme_id" placeholder="Theme" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" required>
                            <% themes.forEach(theme => { %>
                                <option value="<%= theme.id %>" <%= (set.theme_id == theme.id) ? "selected" : "" %>><%= theme.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    
                    <!-- Set Number (Readonly) -->
                    <div>
                        <input type="text" name="set_num" id="set_num" placeholder="Set Number" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md cursor-not-allowed" value="<%= set.set_num %>" readonly required>
                    </div>
                    
                    <!-- Submit Button -->
                    <div class="col-span-2">
                        <button type="submit" class="inline-block bg-pink-600 text-white px-4 py-2 rounded hover:bg-pink-600 w-full">Update Set</button>
                    </div>
